{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "jsx": "react",
    "target": "ESNext",
    "outDir": "../dist/out-tsc",
    "declaration": true,
    "types": ["node", "vite/client"]
  },
  "include": ["src/**/*.ts", "src/**/*.json", "src/**/*.tsx"],
  "exclude": [
    "jest.config.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "test/**/*"
  ]
}
